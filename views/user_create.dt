extends base.dt

block content
	form#login(method="post", action='/user/create')
		fieldset 
			legend create account
			- if(_error)
				p(style='color:red')= _error
			input.first(type="email", placeholder="email", name="email", required)
			input(type="password", placeholder="password", name="password", required)
			input(type="text", placeholder="display name", name="name", required)
			input.last(type="submit", value="create account")
	